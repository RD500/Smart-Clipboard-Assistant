<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list android:paddingRight="18dp">
            <item android:drawable="@drawable/strip_action_background" android:gravity="fill"/>
            <item android:drawable="@drawable/ic_clipboard_paste_action" android:gravity="right|center_vertical"/>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item android:drawable="@drawable/strip_action_background" android:gravity="fill"/>
            <item android:drawable="@drawable/ic_clipboard_paste_action" android:gravity="center"/>
        </layer-list>
    </item>
</selector>
