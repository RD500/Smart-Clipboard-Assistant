<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/main_fragment_top_info_layout"
            android:layout_margin="8dp"/>

        <!-- this box will be should shown
         only if the keyboard is not fully enabled in the system. -->
        <include layout="@layout/main_fragment_not_configured_info_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/change_log_card"
                style="@style/Ask.Card"
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_weight="5"
                android:layout_marginRight="8dp">

                <fragment
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:name="com.anysoftkeyboard.ui.tutorials.ChangeLogFragment$CardedChangeLogFragment"
                    tools:layout="@layout/changelog_layout_114" />

                <TextView
                    style="@style/Ask.Text.Hint"
                    android:id="@+id/read_more_change_log"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="6dp"
                    android:text="@string/click_for_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tips_card"
                style="@style/Ask.Card"
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_weight="5"
                android:layout_marginLeft="8dp">

                <FrameLayout
                    android:id="@+id/random_tip_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- until google fixes the problem with nested fragments, I'll need to
                     add the fragment from code -->
                </FrameLayout>

                <TextView
                    style="@style/Ask.Text.Hint"
                    android:id="@+id/show_more_tips"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="6dp"
                    android:text="@string/click_for_more" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>